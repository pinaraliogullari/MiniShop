@model RegisterViewModel
<div class="container mt-5 w-50">
    <h6 class="display-4">Kayıt Ol</h6>
    <hr />
    <form
        asp-area=""
        asp-controller="Account"
        asp-action="Register"
        method="post"
    
    >
    <div class="row">
        <!--tek tek span eklemedik tüm hataları tek bir yerde görmek için;-->
            <div asp-validation-summary="All" class="col-md-12 text-danger"></div>
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName"/>
            </div>
        </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="LastName"></label>
                    <input class="form-control" asp-for="LastName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="UserName"></label>
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label asp-for="RePassword"></label>
                    <input class="form-control" asp-for="RePassword" />
                </div>
            </div>
            <div class="col-md-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Kaydol</button>
            </div>
    </div>

    </form>
</div>